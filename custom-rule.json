{
  "id": "1003",
  "name": "支付宝弹窗自动关闭（指定文字+返回按钮）",
  "version": "1.0",
  "author": "自定义",
  "categories": ["支付宝", "弹窗关闭"],
  "apps": [
    {
      "id": "com.eg.android.AlipayGphone",
      "name": "支付宝",
      "groups": [
        {
          "key": 0,
          "name": "检测指定弹窗+点击desc返回",
          "fastQuery": true,
          "matchTime": 30000,
          "actionMaximum": 0,
          "resetMatch": "page",
          "rules": [
            {
              "key": 0,
              "matches": "[text=\"访问被拒绝\"][visibleToUser=true] || [text=\"人气太旺\"][visibleToUser=true] || [text=\"设备可能存在风险\"][visibleToUser=true]",
              "associatedMatches": "[desc=\"返回\"][clickable=true][visibleToUser=true]",
              "associatedAction": "CLICK",
              "delay": 500,
              "viewIds": "com.alipay.android.phone.thirdparty:id/title"
            }
          ]
        }
      ]
    }
  ]
}
